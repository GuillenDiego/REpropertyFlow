{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zillow Extraction Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "address": { "type": "string" },
    "beds": { "type": "string" },
    "baths": { "type": "string" },
    "total_sqft": { "type": "string" },
    "as_is_value": { "type": "string", "pattern": "^[0-9]*\\.?[0-9]*$" },
    "property_taxes_annual": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" },
    "hoa_monthly": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,2})?$" },
    "source_url": { "type": "string", "format": "uri" },
    "scraped_at": { "type": "string", "format": "date-time" },
    "last_updated_inzillow": { "type": "string" },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [
    "address",
    "beds",
    "baths",
    "total_sqft",
    "as_is_value",
    "property_taxes_annual",
    "hoa_monthly",
    "source_url",
    "scraped_at",
    "last_updated_inzillow",
    "missing_fields"
  ]
}
